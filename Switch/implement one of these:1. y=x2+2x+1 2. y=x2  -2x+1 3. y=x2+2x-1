package demo;
import java.util.Scanner;
public class Menu_function1 {
public static void main(String[] args) {
System.out.println("1.function 1");
System.out.println("2.function 2");
System.out.println("3.function 3");
System.out.println("Enter your choice:");
Scanner kbd=new Scanner(System.in);
Scanner kbi=new Scanner(System.in);
int i=kbi.nextInt();
switch (i)
{
case 1: System.out.println("Input x1=");
double x1=kbd.nextDouble();
double y1=x1*x1+2*x1+1;
System.out.println("y1="+y1);
break;

case 2: System.out.println("Input x2=");
double x2=kbd.nextDouble();
double y2=x2*x2-2*x2+1;
System.out.println("y2="+y2);
break;

case 3: System.out.println("Input x3=");
double x3=kbd.nextDouble();
double y3=x3*x3+2*x3-1;
System.out.println("y3="+y3);
break;

default :System.out.println("choice = 1,2, or 3!");

}
}
}
